---
import "../styles/global.css";
import { site } from "../config/site";

const { title, description } = Astro.props as {
  title: string;
  description: string;
};

const canonical = Astro.url.toString();
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" />

    <!-- Basic OG (preview al compartir) -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={site.name} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />

    <!-- Theme -->
    <meta name="theme-color" content="#f8fafc" />
  </head>

  <body class="min-h-screen bg-slate-50 text-slate-900">
    <!-- Background premium suave -->
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,rgba(59,130,246,0.08),transparent_55%),radial-gradient(ellipse_at_bottom,rgba(239,68,68,0.06),transparent_55%)]"></div>

    <slot />

    <footer class="mt-16 border-t bg-white/70 backdrop-blur">
      <div class="mx-auto max-w-5xl px-4 py-10 grid gap-6 md:grid-cols-3 text-sm">
        <!-- Brand -->
        <div class="space-y-2">
          <div class="font-semibold">{site.name}</div>
          <div class="text-slate-600">{site.tagline}</div>
        </div>

        <!-- Contact -->
        <div class="space-y-2">
          <div class="font-semibold">Kontakt</div>
          <div class="text-slate-600">
            <div>{site.address1}, {site.address2}</div>
            <div>
              <a class="hover:underline" href={`tel:${site.phoneRaw}`}>{site.phoneDisplay}</a>
            </div>
          </div>
        </div>

        <!-- Legal -->
        <div class="space-y-2 md:text-right">
          <div class="font-semibold">Rechtliches</div>
          <div class="flex md:justify-end flex-wrap gap-x-4 gap-y-2 text-slate-600">
            <a class="hover:underline" href="/impressum">Impressum</a>
            <a class="hover:underline" href="/datenschutz">Datenschutz</a>
          </div>
          <div class="text-slate-500">Â© {new Date().getFullYear()} {site.name}</div>
        </div>
      </div>
    </footer>
  </body>
</html>
