---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const {
  title = "Chupetitos Stommeln",
  description = "Liebevolle und famili√§re Kinderbetreuung in Deutsch & Spanisch in Pulheim-Stommeln.",
  lang = "de",
} = Astro.props;
---

<!doctype html>
<html lang={lang} class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800;900&family=Fredoka:wght@500;600;700&display=swap"
    />

    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>

  <body class="kid-page-bg kid-font text-slate-900 antialiased overflow-x-hidden min-h-screen m-0">
    <main class="kid-flyer">
      <slot />
    </main>
  </body>
</html>
