---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Chupetitos Stommeln",
  description = "Liebevolle und famili√§re Kinderbetreuung in Deutsch & Spanisch in Pulheim-Stommeln.",
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800;900&family=Fredoka:wght@500;600;700&display=swap"
    />

    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>

  <body class="min-h-screen kid-page-bg kid-font text-slate-900 antialiased">
    <div class="px-4 py-8 md:py-10">
      <!-- Tu CSS actual usa .kid-flyer -->
      <main class="kid-flyer mx-auto max-w-[1100px]">
        <slot />
      </main>
    </div>
  </body>
</html>
