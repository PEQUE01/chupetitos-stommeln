---
import "../styles/global.css";
import { site } from "../config/site";

const { title, description } = Astro.props as {
  title: string;
  description: string;
};

const canonical = Astro.url.toString();
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Fonts (cálidas / infantiles pero pro) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredoka:wght@500;600;700&family=Nunito:wght@400;600;700;800&display=swap"
      rel="stylesheet"
    />
    
    <link rel="icon" type="image/png" href="/images/logo-mark-64.png" />
    <link rel="apple-touch-icon" href="/images/logo-mark-192.png" />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={site.name} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />

    <meta name="theme-color" content="#f7f1ea" />
  </head>

  <body class="min-h-screen text-slate-900 kid-font">
    <slot />

    <footer class="mt-16 border-t bg-white/60 backdrop-blur">
      <div class="mx-auto max-w-5xl px-4 py-10 grid gap-6 md:grid-cols-3 text-sm">
        <div class="space-y-2">
          <div class="font-extrabold kid-title">{site.name}</div>
          <div class="text-slate-600">{site.tagline}</div>
        </div>

        <div class="space-y-2">
          <div class="font-bold">Kontakt</div>
          <div class="text-slate-600">
            <div>{site.address1}, {site.address2}</div>
            <div>
              <a class="hover:underline" href={`tel:${site.phoneRaw}`}>{site.phoneDisplay}</a>
            </div>
          </div>
        </div>

        <div class="space-y-2 md:text-right">
          <div class="font-bold">Rechtliches</div>
          <div class="flex md:justify-end flex-wrap gap-x-4 gap-y-2 text-slate-600">
            <a class="hover:underline" href="/impressum">Impressum</a>
            <a class="hover:underline" href="/datenschutz">Datenschutz</a>
          </div>
          <div class="text-slate-500">© {new Date().getFullYear()} {site.name}</div>
        </div>
      </div>
    </footer>
  </body>
</html>
